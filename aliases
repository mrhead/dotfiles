# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

alias .='clear'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias -- -='cd -'
alias cdm='cd ~/ruby/memberful'
alias cdr='cd ~/ruby/rails'
alias cds='cd ~/ruby/shop'
alias cdt='cd ~/Desktop'
alias cdwp='cd ~/php/memberful-wp/plugin'

# IP addresses
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ip='myip'
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Bundler
alias b="bundle"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias m="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

# heroku
alias hc='heroku run rails console'
alias hrr='heroku run rake'
alias wh='watch heroku ps'

alias v='vim'
alias vi='vim'
alias powr='pkill -USR1 puma-dev'

# git
alias co='git co'
alias com='git co master'
alias cob='git checkout $(git branch | cut -c 3- | pick)'
alias ga='git add --all'
alias gb='git branch'
alias gc='git commit'
alias gcb='git co -b'
alias gcw='ga; git commit -m "wip - do not merge"'
alias gd='git diff'
alias gdh='git diff HEAD'
alias gl='git log'
alias glp='git log --patch'
alias gp='git push'
alias gph='git push heroku master'
alias gr='git reset'
alias grc='git rebase --continue'
alias gri='git rebase -i'
alias grs="git reset --soft 'HEAD^1'; git reset"
alias gs='git show'
alias delete_merged_branches='git branch --merged | grep -v "\*" | grep -v "master" | xargs git branch -d'

# Convert long SHA into a short one.
alias short='git rev-parse --short '

# Create pull request description based on commit messages.
alias pr='git log --format="* %h **%s**%n%w(0,2,2)%+b" --reverse master..HEAD'
alias prc='pr | pbcopy'

# Rails
alias rr='rails routes'
alias rrg='rails routes | grep'
alias rc='rails console'
alias sk='bundle exec sidekiq -C config/sidekiq.yml'
alias dbr="powr && rake db:reset"
alias tdl="tail -f log/development.log"
alias ttl="tail -f log/test.log"

alias tmux="tmux -2"
alias t="tmux"
alias kill_rspec="ps -ef | grep \"[r]spec\" | grep ruby | awk '{print \$2}' | xargs kill"
alias grep='grep --color=auto'
alias dump_db='pg_dump -c `rails runner "puts ActiveRecord::Base.connection.current_database" | tail -1` > db.dump'
alias restore_db='psql `rails runner "puts ActiveRecord::Base.connection.current_database" | tail -1` < db.dump'

# Vagrant
alias vu='vagrant up'
alias vh='vagrant halt'
alias vs='vagrant ssh'

# format JSON
alias json='python -mjson.tool'

# Perform GET, POST... requests
# Example: GET google.com
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
  alias "$method"="lwp-request -m '$method'"
done
alias headers="curl -v -o /dev/null"

# Memberful
alias mf="memberful"
alias mfp="memberful production"
alias mfs="memberful staging"

# Simple web server
alias ws='python -m SimpleHTTPServer'

# ngrok.io
alias nt='foreman start -f ngrok.procfile' # ngrok tunnel
