# Unix
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"

# heroku
alias hc='heroku run console'
alias hrr='heroku run rake'

alias vi='vim'
alias powr='touch ~/.pow/restart.txt'
alias js='jekyll server --watch'
alias cdgems='cd ~/.rbenv/versions/`rbenv version | cut -f 1 -d " "`/lib/ruby/gems/*/gems'
alias ga='git add --all'
alias gb='git branch'
alias gbd='git branch -d'
alias gc='git commit'
alias gcw='ga; git commit -m wip'
alias gcb='git co -b'
alias gd='git diff'
alias gdh='git diff HEAD'
alias gl='git log'
alias gp='git push'
alias gph='git push heroku master'
alias gr='git reset'
alias gri='git rebase -i'
alias grc='git rebase --continue'
alias grs="git reset --soft 'HEAD^1'; git reset"
alias gs='git show'

alias rr='rake routes'
alias rrg='rake routes | grep'
alias rc='rails console'
alias i18n:sort='rake i18n:sort'
alias sk='bundle exec sidekiq -C config/sidekiq.yml'

alias t='tmux'
alias kill_rspec="ps -ef | grep bin/rspec | grep ruby | awk '{print $2}' | xargs kill"
alias ws='python -m SimpleHTTPServer'
alias grep='grep --color=auto'
